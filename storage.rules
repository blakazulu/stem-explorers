rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Units folder - PDF and Word documents
    match /units/{grade}/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Documentation images
    match /documentation/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if true;
    }

    // Journal images
    match /journals/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Expert profile images
    match /experts/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Staff profile images
    match /staff/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if true;
    }

    // Resource files (training schedule, timetable) - PDF, Word, or images
    match /resources/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB limit
      allow delete: if true;
    }

    // Personal page media (images, videos, thumbnails)
    match /personal/media/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024; // 50MB limit for compressed videos
      allow delete: if true;
    }

    // Parent content event images
    match /parent-content/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if true;
    }

    // Intro banners (personal, dashboard, pedagogical)
    match /intros/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Announcements images (יוצאים לדרך)
    match /announcements/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if true;
    }

    // Parent challenges media (אתגר הורים) - images and videos
    match /challenges/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*')
                       || request.resource.contentType.matches('video/.*'));
      allow delete: if true;
    }

    // Default: allow read, deny write for other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
