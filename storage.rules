rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Units folder - PDF and Word documents
    match /units/{grade}/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Documentation images
    match /documentation/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Journal images
    match /journals/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Expert profile images
    match /experts/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Default: allow read, deny write for other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
